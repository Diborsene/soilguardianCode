{
  "expo": {
    "name": "SoilGardien",
    "slug": "soilgardien",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "soilgardien",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.soilgardien.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SoilGardien a besoin d'accéder à votre position pour afficher votre parcelle et analyser le sol.",
        "NSLocationAlwaysUsageDescription": "SoilGardien a besoin d'accéder à votre position pour vous fournir des analyses précises."
      },
      "config": {
        "googleMapsApiKey": "VOTRE_CLE_IOS_ICI"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2ecc71",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.soilgardien.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "VOTRE_CLE_ANDROID_ICI"
        }
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SoilGardien a besoin d'accéder à votre position pour afficher votre parcelle et analyser le sol."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}